# ─── Dockerfile.dev ───
FROM node:20

WORKDIR /app

# Install Chromium dependencies for Puppeteer
RUN apt-get update && apt-get install -y \
    libnss3 libatk1.0-0 libatk-bridge2.0-0 libx11-xcb1 libxcomposite1 \
    libxdamage1 libxrandr2 libxkbcommon0 libgtk-3-0 libpango-1.0-0 \
    libpangocairo-1.0-0 libcairo2 libasound2 libxext6 libxfixes3 \
    fonts-liberation libgbm1 libnspr4 ca-certificates && \
    rm -rf /var/lib/apt/lists/*

COPY package*.json ./
RUN npm ci
COPY . .

EXPOSE 5000
CMD ["npm", "run", "dev"]
